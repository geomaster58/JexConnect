<div class="card">
  <div class="row">
    <div class="flux">JEX CONNECT</div>
      <style>
      @import url('https://fonts.googleapis.com/css?family=Rasa');
      </style>
      <div class="homeheader">ADDICT TO RECOVERY.</div>
      <div class="field">
  
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <%= f.email_field :email, id: 'username',  onfocus: "handle2()", class: 'text inc2 input-field',  placeholder: 'Username' %>

        <%= f.password_field :password, id: 'password',  onfocus: "handle1()", class: 'pass inc1 input-field', placeholder: 'Password' %>
        
        <%= f.submit "Login", class: "login-btn" %>
        <%= link_to "Sign Up", new_user_registration_path, class: "sign-up login-btn fix-text" %>

        <svg width="390" height="549" xmlns="http://  www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
          <rect id='rect' class='rect1'   x="45px"  y="300px"   rx="27" ry="27" width="300px" height="50px" style="stroke: #fff; stroke-width: 1px; fill: #000" />
        </svg>  
      </div>
  </div>
</div>

<% end %>

<script>
  let rect = document.getElementById("rect");
  let username = document.getElementById("username");
  let password = document.getElementById("password");

  function handle1() {
    rect.setAttribute("class", "rect2");
  }

  function handle2() {
    rect.setAttribute("class", "rect1");
  }
</script>