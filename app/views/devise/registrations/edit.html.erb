<%= stylesheet_link_tag "edit" %>

<h1 class="flux newbster">Settings</h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field"> 
    <%= f.email_field :email, autofocus: true, class: "input-field", placeholder: 'Email' %>

    <%= f.password_field :password, autocomplete: "off", class: "input-field", placeholder: 'New Password' %>
    
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "input-field", placeholder: 'Confirm New Password' %>

    <%= f.password_field :current_password, autocomplete: "off", class: "input-field", placeholder: 'Current Password' %>
    
    <div class="input-field col s12">
        <%= link_to "Save", profile_path, class: "waves-effect waves-light btn" %> 
      </div>
  </div>

<% end %>

<%= render "devise/shared/links" %>